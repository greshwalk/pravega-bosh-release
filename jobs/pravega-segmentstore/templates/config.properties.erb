<% zk = link('zookeepers') -%>
<% nn = link('namenodes') -%>
<% controllers = link('controllers') -%>
<% controller_addr = controllers.instances.first.address -%>
pravegaservice.clusterName=<%= p('cluster_name') %>
pravegaservice.containerCount=<%= p('container_count') %>
pravegaservice.listeningPort=<%= p('listening_port') %>
pravegaservice.zkURL=<%= "#{zk.instances.first.address}:#{zk.p('client_port')}" %>
pravegaservice.dataLogImplementation=BOOKKEEPER
pravegaservice.storageImplementation=HDFS
pravegaservice.cacheMaxSize=17179869184
autoScale.controllerUri=tcp://<%= "#{controller_addr}:#{controllers.p('server_port')}" %>
metrics.enableStatistics=false
metrics.enableCSVReporter=false
metrics.enableStatsdReporter=false
bookkeeper.zkAddress=<%= "#{zk.instances.first.address}:#{zk.p('client_port')}" %>
bookkeeper.bkLedgerPath=<%= p('bk_ledger_path') %>
hdfs.hdfsUrl=<%= "#{nn.instances.first.address}:#{nn.p('dfs.port')}" %>
hdfs.hdfsRoot=/proot
hdfs.replication=3
hdfs.blockSize=134217728
rocksdb.dbDir=/tmp/pravega/cache
rocksdb.writeBufferSizeMB=512
rocksdb.readCacheSizeMB=1024
rocksdb.cacheBlockSizeKB=32
writer.flushThresholdBytes=4194304
writer.flushThresholdMillis=6000
writer.maxFlushSizeBytes=134217728
